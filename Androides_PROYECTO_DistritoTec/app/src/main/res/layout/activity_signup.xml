<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.androides_proyecto_distritotec.LoginSingup.SignupActivity"
    android:orientation="vertical"
    android:background="#708090">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/usuarioET"
        android:hint=" Username"
        android:background="@drawable/edittextdesign"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:id="@+id/passwordET"
        android:layout_marginTop="160dp"
        android:background="@drawable/edittextdesign"
        android:hint=" Password"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/usuarioET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/usuarioET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:id="@+id/passwordRepET"
        android:layout_marginTop="220dp"
        android:background="@drawable/edittextdesign"
        android:hint=" Repeat Password"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/passwordET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:id="@+id/emailET"
        android:layout_marginTop="280dp"
        android:background="@drawable/edittextdesign"
        android:hint=" email"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/passwordRepET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordRepET" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#0a5988"
        android:id="@+id/signupButton"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/emailET"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
