<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strWelcome"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/tvWelcome"
        android:layout_toRightOf="@+id/tvWelcome"
    />

    <TextView
        android:id="@+id/tvFavs"
        android:layout_below="@+id/tvWelcome"
        android:text="@string/strFavs"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a5988"
        android:textColor="#fff"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/lvFavs"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvFavs"
        android:layout_width="match_parent"
        android:layout_height="75dp"/>

    <ExpandableListView
        android:id="@+id/expList"
        android:layout_below="@+id/lvFavs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#000"
        android:dividerHeight="1dp"/>
</RelativeLayout>

    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Listview to display slider menu -->
    <!-- backgorund: color del Side Bar donde no hay items -->
    <!-- divider: color de la barra divisora -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="#FFFFFF"/>
</android.support.v4.widget.DrawerLayout>